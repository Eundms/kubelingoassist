{
  "name": "kubelingoassist",
  "displayName": "KubeLingoAssist",
  "description": "쿠버네티스 문서 번역을 위한 Split View와 Synchronized Scroll 지원",
  "version": "0.0.1",
  "repository": { "type": "git", "url": "https://github.com/eundms/k8s-translation-helper.git" },
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:kubelingoassist-view",
    "onCommand:kubelingoassist.openTranslation",
    "onCommand:kubelingoassist.toggleSyncScroll"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        { "id": "kubelingoassist", "title": "KubeLingoAssist", "icon": "./kubelingoassist-icon.svg" }
      ]
    },
    "views": {
      "kubelingoassist": [
        { "id": "kubelingoassist-view", "name": "Translation Helper", "type": "webview" }
      ]
    },
    "commands": [
      { "command": "kubelingoassist.openTranslation", "title": "번역 파일 열기" },
      { "command": "kubelingoassist.toggleSyncScroll", "title": "스크롤 동기화 토글" }
    ],
    "keybindings": [
      {
        "command": "kubelingoassist.openTranslation",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus || view == kubelingoassist-view"
      },
      {
        "command": "kubelingoassist.toggleSyncScroll",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus || view == kubelingoassist-view"
      }
    ],
    "menus": {
      "explorer/context": [
        { "command": "kubelingoassist.openTranslation", "when": "resourceExtname == .md" }
      ]
    }
  },
  "scripts": {
    "compile": "npm run build-ui && npx tsc -p ./",
    "build-ui": "cd ui && npm run build",
    "test": "npm run compile && node ./out/test/runTest.js",
    "pretest": "npm run compile",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.1",
    "typescript": "^4.9.5"
  }
}